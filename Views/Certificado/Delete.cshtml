@model pf_final_ds2.Models.Certificado

@{
    ViewData["Title"] = "Eliminar Certificado";
}

<h1>Eliminar Certificado</h1>

<div>
    <h4>¿Está seguro de que desea eliminar este certificado?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Estudiante
        </dt>
        <dd class="col-sm-10">
            @Model.Estudiante?.NombreCompleto
        </dd>
        <dt class="col-sm-2">
            Semestre
        </dt>
        <dd class="col-sm-10">
            @Model.Semestre?.Nombre
        </dd>
        <dt class="col-sm-2">
            Documento
        </dt>
        <dd class="col-sm-10">
            @Model.Documento
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
