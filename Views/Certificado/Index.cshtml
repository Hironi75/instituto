@model IEnumerable<pf_final_ds2.Models.Certificado>

@{
    ViewData["Title"] = "Certificados";
}

<h1>Certificados</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Estudiante</th>
            <th>Semestre</th>
            <th>Fecha Generación</th>
            <th>Documento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var certificado in Model)
        {
            <tr>
                <td>@certificado.Id</td>
                <td>@certificado.Estudiante?.NombreCompleto</td>
                <td>@certificado.Semestre?.Nombre</td>
                <td>@certificado.FechaGeneracion.ToShortDateString()</td>
                <td>@certificado.Documento</td>
                <td>
                    <a asp-action="Print" asp-route-id="@certificado.Id" class="btn btn-secondary btn-sm">Imprimir
                        Certificado</a>
                    <a asp-action="Edit" asp-route-id="@certificado.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@certificado.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Nuevo Certificado</a>
<a asp-action="Index" asp-controller="Admin" class="btn btn-outline-secondary">Atrás</a>
