@model pf_final_ds2.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background: #f8f9fa;">
    <div class="card shadow" style="width: 350px; border-radius: 20px;">
        <div class="card-body text-center"
            style="background: linear-gradient(135deg, #6a11cb, #2575fc); border-radius: 20px 20px 0 0; color: white;">
            <h2 class="card-title">Login</h2>
        </div>
        <div class="card-body">
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Correo" class="control-label">Correo</label>
                    <input asp-for="Correo" class="form-control" style="border-radius: 10px;" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Contraseña</label>
                    <input asp-for="Password" class="form-control" type="password" style="border-radius: 10px;" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-3" style="border-radius: 10px;">Login</button>
                <button type="button" class="btn btn-secondary btn-block mt-2" style="border-radius: 10px;" onclick="location.href='@Url.Action("Index", "Home")'">Volver atrás</button>
            </form>
        </div>
    </div>
</div>