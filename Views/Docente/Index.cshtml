@{
    ViewData["Title"] = "Inicio Docente";
}

<!-- #region  asignar materia, registrar estudiantes, asistencias, notas --->


<div class="container mt-5">
    <h1 class="text-center mb-4">Bienvenido Docente</h1>
    <p class="text-center mb-5">Esta es la página de inicio para el docente. Selecciona una opción para gestionar
        el sistema:</p>
    <div class="row g-4 justify-content-center">

        <div class="col-md-3">
            <a asp-controller="EstudianteDo" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-danger h-100 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-mortarboard display-4 mb-2"></i>
                        <h5 class="card-title">Estudiantes</h5>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a asp-controller="NotaDo" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-warning h-100 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-journal-check display-4 mb-2"></i>
                        <h5 class="card-title">Notas</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="AsistenciaDo" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-info h-100 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-clipboard-check display-4 mb-2"></i>
                        <h5 class="card-title">Asistencia</h5>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a asp-controller="AsignacionDo" asp-action="Index" class="text-decoration-none">
                <div class="card border-primary h-100 shadow">
                    <div class="card-body text-center text-primary">
                        <i class="bi bi-list-task display-4 mb-2"></i>
                        <h5 class="card-title">Asignaciones</h5>
                    </div>
                </div>
            </a>
        </div>

    <div class="row mt-5">
        <div class="col text-center">
            <form asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger btn-lg"><i class="bi bi-box-arrow-right"></i> Cerrar
                    Sesión</button>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">