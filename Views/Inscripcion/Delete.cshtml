@model pf_final_ds2.Models.Inscripcion

@{
    ViewData["Title"] = "Eliminar Inscripción";
}

<h1>Eliminar Inscripción</h1>

<div>
    <h4>¿Está seguro de que desea eliminar esta inscripción?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Estudiante</dt>
            <dd class="col-sm-10">@Model.Estudiante?.NombreCompleto</dd>
            <dt class="col-sm-2">Materia</dt>
            <dd class="col-sm-10">@Model.Materia?.Nombre</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
