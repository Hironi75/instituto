@{
    ViewData["Title"] = "Inicio Administrador";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Bienvenido Administrador</h1>
    <p class="text-center mb-5">Esta es la página de inicio para el administrador. Selecciona una opción para gestionar
        el sistema:</p>
    <div class="row g-4 justify-content-center">
        <div class="col-md-3">
            <a asp-controller="Semestre" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-primary h-100 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar3 display-4 mb-2"></i>
                        <h5 class="card-title">Semestres</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Inscripcion" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-success h-100 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-person-plus display-4 mb-2"></i>
                        <h5 class="card-title">Inscripciones</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Nota" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-warning h-100 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-journal-check display-4 mb-2"></i>
                        <h5 class="card-title">Notas</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Estudiante" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-danger h-100 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-mortarboard display-4 mb-2"></i>
                        <h5 class="card-title">Estudiantes</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Asistencia" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-info h-100 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-clipboard-check display-4 mb-2"></i>
                        <h5 class="card-title">Asistencia</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Certificado" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-secondary h-100 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-award display-4 mb-2"></i>
                        <h5 class="card-title">Certificados</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Usuario" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-dark h-100 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-people display-4 mb-2"></i>
                        <h5 class="card-title">Usuarios</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Asignacion" asp-action="Index" class="text-decoration-none">
                <div class="card border-primary h-100 shadow">
                    <div class="card-body text-center text-primary">
                        <i class="bi bi-list-task display-4 mb-2"></i>
                        <h5 class="card-title">Asignaciones</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Materia" asp-action="Index" class="text-decoration-none">
                <div class="card border-success h-100 shadow">
                    <div class="card-body text-center text-success">
                        <i class="bi bi-book display-4 mb-2"></i>
                        <h5 class="card-title">Materias</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a asp-controller="Admin" asp-action="Reportes" class="text-decoration-none">
                <div class="card border-info h-100 shadow">
                    <div class="card-body text-center text-info">
                        <i class="bi bi-bar-chart-line display-4 mb-2"></i>
                        <h5 class="card-title">Reportes</h5>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col text-center">
            <form asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger btn-lg"><i class="bi bi-box-arrow-right"></i> Cerrar
                    Sesión</button>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

               