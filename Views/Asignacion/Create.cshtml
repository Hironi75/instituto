@model pf_final_ds2.Models.Asignacion

@{
    ViewData["Title"] = "Nueva Asignación";
}

<h1>Nueva Asignación</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DocenteId" class="control-label">Docente</label>
        <select asp-for="DocenteId" class="form-control" asp-items="@(new SelectList(ViewData["Docentes"] as List<pf_final_ds2.Models.Usuario>, "Id", "Nombre"))">
            <option value="">Seleccione un docente</option>
        </select>
        <span asp-validation-for="DocenteId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MateriaId" class="control-label">Materia</label>
        <select asp-for="MateriaId" class="form-control" asp-items="@(new SelectList(ViewData["Materias"] as List<pf_final_ds2.Models.Materia>, "Id", "Nombre"))">
            <option value="">Seleccione una materia</option>
        </select>
        <span asp-validation-for="MateriaId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
